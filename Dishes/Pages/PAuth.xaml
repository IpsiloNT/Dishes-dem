<Page x:Class="Dishes.Pages.PAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dishes.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Логин:"></TextBlock>
                    <TextBlock Text="Пароль:"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBox x:Name="TB_Login" Text="awd"></TextBox>
                    <PasswordBox x:Name="PB_Password" Password="awd"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <Button Content="Войти" Name="BTN_Login" Click="BTN_Login_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
